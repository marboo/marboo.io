  body
    .navbar-wrapper
      .container
        .navbar.navbar-static-top(role='navigation')
          .container
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href='#') Marboo
            .navbar-collapse.collapse
              ul.nav.navbar-nav
                li.active
                  a(href='#') #{home}
                li
                  a(href='/packages') #{packages}
                li
                  a(href='/guide') #{guide}
                li
                  a(href='/gallery') #{gallery}
                li
                  a(href='/marboo-intro.remark.md.html') #{overview}
                li
                  a(href='http://amoblin.marboo.biz/') #{blog}
                li(style="margin-top:15px")
                  wb:follow-button(uid='1657760362', type='gray_2')
                    span(style='background:url(http://timg.sjs.sinajs.cn/t4/appstyle/widget/images/library/base/loading1.gif) no-repeat;height:18px;padding:0 0 2px 20px;') Loading...
                li(style="margin-top:15px")
                  wb:share-button(count='y', type='icon', size='small')
                    iframe(src='http://service.weibo.com/staticjs/weiboshare.html?url=http%3A%2F%2Fhtml2jade.org%2F&type=3&count=1&language=zh_cn&showbutton=1', width='72', height='16', frameborder='0', scrolling='no', marginheight='0')
                li.dropdown
                  a.dropdown-toggle(href=currentTransLink, data-toggle='dropdown') #{currentTrans}
                    b.caret
                  ul.dropdown-menu
                    li
                      a(href=otherTransLink) #{otherTrans}
    //                <li class="divider"></li>
    //                <li class="dropdown-header">Nav header</li>
    //                <li><a href="#">Separated link</a></li>
    //                <li><a href="#">One more separated link</a></li>
    //   Carousel
    #myCarousel.carousel.slide(data-ride='carousel', style='height:590px')
      .row.featurette
        .col-md-12(align='center')
          h2.featurette-heading=slogon
            span.text-muted
          p.lead.text-muted=subSlogon
          br
          br
        .col-md-7(align='center')
          img.featurette-image.img-responsive(src='http://medis.qiniudn.com/marboo-vim-markdown.png', style='width:80%', alt='Generic placeholder image')
        .col-md-5(align='center')
          h2.featurette-heading(style='font-size:30px;margin-top:180px; margin-bottom:20px') #{downloadTitle}
          a.btn.btn-default.btn-lg(href=downloadLink, onclick='ga("send", "event", "button", "click", "Marboo_v0.8.dmg", 1);', style='background:#428bca;width:300px')
            h2(style='font-size:25px; font-weight:300; margin-top:10px; color:white') #{download}
          br
          p.text-muted(style='margin-top:10px', text-align='center') #{date}
              
    // /.carousel
    //   Marketing messaging and featurettes
    // Wrap the rest of the page in another container to center all the content.
    .container.marketing
      hr.featurette-divider(style='margin:70px 0')
      // Three columns of text below the carousel
      .row
        - each item in coreInfo
          .col-lg-4
            img(src=item.src, alt='Generic placeholder image', width='60px', height='60px')
            h2=item.title
            p.text-muted=item.subtitle
            p
              a.btn.btn-default(href=link, role='button') View details »
      // /.row
      // START THE FEATURETTES
      - each item in features
        hr.featurette-divider
        .row.featurette
          if item.image_left
            .col-md-5
              img.featurette-image.img-responsive(src=item.image, alt='Generic placeholder image')
            .col-md-7
              h2.featurette-heading=item.title
                span.text-muted=item.subtitle
              p.lead=item.info
          else
            .col-md-7
              h2.featurette-heading=item.title
                span.text-muted=item.subtitle
              p.lead=item.info
            .col-md-5
              img.featurette-image.img-responsive(src=item.image, alt='Generic placeholder image')
      hr.featurette-divider
      // /END THE FEATURETTES
      // Friends
      .row.featurette
        #tools.col-md-12
          h1=friends_title
          br
          ul
            li
              a.dropbox(href='https://db.tt/p8LtkZ2', title='Dropbox') Dropbox
            li
              a.btsync(href="http://www.bittorrent.com/sync", title="BitTorrent Sync") BitTorrent Sync
            li
              a.mou(href='http://mouapp.com/', title='Mou') Mou
            li
              a.git(href='http://git-scm.com/', title='Git') Git
            li
              a.github(href='https://github.com/', title='GitHub') GitHub
            li
              a.macvim(href='http://code.google.com/p/macvim/', title='MacVim') MacVim
            li
              a.emacs(href='http://emacsformacosx.com/', title='Emacs for OSX') Emacs
            li
              a.atom(href='https://atom.io', title="Atom Editor") Atom
            li
              a.totalterminal(href='http://totalterminal.binaryage.com/', title='TotalTerminal') TotalTerminal
            li
              a.jekyll(href='http://jekyllrb.com/', title="Jekyll Blog") Jekyll
            li
              a.hexo(href='http://zespia.tw/hexo/', title="Hexo Blog") Hexo
            li
              a.ghost(href='https://ghost.org/', title="Ghost Blog") Ghost
            li
              a(href='')
      hr.featurette-divider
      // FOOTER
      footer
        p.pull-right
          a(href='#') Back to top
        p © 2014 Marboo 
